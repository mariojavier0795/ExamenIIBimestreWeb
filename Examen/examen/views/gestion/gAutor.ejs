<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <title>Document</title>
    <style>
        .separador {
            height: 10vh;
        }
    </style>
</head>
<body>
<div class="col-md-6 text-right">


</div>
<div class="col-md-6 text-left">
    <legend class="col-md-6"><%= tempNombre %></legend>
    <form method="get" action="/api/salir">
        <button class="col-md-6 btn btn-danger">Salir</button>
    </form>
</div>
<div class="col-md-12">
    <div class="panel panel-info">
        <div class="panel-heading">
            <legend class="">Gestión de Platos</legend>

        </div>
        <div class="panel-body">
            <form action="/api/autores/encontrar" method="post">
                <div class="col-md-8">
                    <div class="input-group ">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
                        <input  id="email" type="text" class="form-control" name="nombre" placeholder="Escriba aquí....">
                    </div>

                </div>
                <div class="col-md-2 ">


                    <button class="btn btn-info">Busqueda</button>


                </div>
            </form>
            <div class="col-md-2">
                <form method="get" action="/api/crearAutor">
                    <button class="btn btn-success pull-right">Crear</button>
                </form>
            </div>
            <div class="col-md-12 separador"></div>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th>FechaNacimiento</th>
                    <th>Numero libros</th>
                    <th>Es ecuatoriano?</th>
                    <th>Opciones</th>
                </tr>
                <% arregloAutores.forEach((autor)=>{ %>
                    <tr>
                        <td><%= autor.apellidos %></td>
                        <td><%= autor.apellidos %></td>
                        <td><%= autor.fechaNacimiento %></td>
                        <td><%= autor.numeroLibros %></td>
                        <td><%= autor.ecuatoriano %></td>
                        <td>

                            <form action="/api/autores/eliminar"
                                  method="post">
                                <input type="number"  name="id" value="<%=autor.id%>" hidden >
                                <button class="btn btn-danger">Eliminar</button>
                            </form>


                        </td>
                        <td>
                            <form action="/api/autores/gestionHijos/<%= autor.id%>">
                            <button class="btn btn-info">Gestionar Hijos</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </table>
        </div>
    </div>
</div>
</body>
</html>
